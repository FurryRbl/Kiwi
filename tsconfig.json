{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"sourceMap": true,
		"target": "ES2020",
		"module": "ESNext",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"compilerOptions": {
			"esm": true,
			"target": "ES5",
			"module": "CommonJS"
		}
	},
	"include": ["./src/**/*", "./types/**/*"]
}
